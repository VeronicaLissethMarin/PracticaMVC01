@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Equipos</h1>
</div>

<div class="row">
    <div class="form-group">
        <label>Nombre de equipo</label>
        @Html.TextBox("txtNombre","", new{@class="form-control"})
