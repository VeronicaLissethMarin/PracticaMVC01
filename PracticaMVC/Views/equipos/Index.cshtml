    <div class="form-group">
        @Html.Label("lblDescripcionE","Descripción")
        @Html.TextArea("txaDescripcion","", new{@class="form-control"})
    </div>
    <div class="form-group">
        @Html.Label("lbltipoEquipo","Tipo de Equipo")
        @Html.TextBox("txaTipoequipo","", new{@class="form-control"})
    </div>
    <div class="form-group">
        @Html.Label("lblmarcaId","Marca")
        @Html.TextBox("txaMarcaId","", new{@class="form-control"})
    </div>
    <div class="form-group">
        @Html.Label("lblModelo","Modelo")
        @Html.TextBox("txaModelo","", new{@class="form-control"})
    </div>
    <div class="form-group">
        @Html.Label("lblcompraAnio","Año de compra")
        @Html.TextBox("txacompraAnio","", new{@class="form-control"})
    </div>
    <div class="form-group">
        @Html.Label("lblcosto","Costo")
        @Html.TextBox("txacosto","", new{@class="form-control"})
    </div>
    <div class="form-group">
        @Html.Label("lblvidaUtil","Vida Util")
        @Html.TextBox("txavidaUtil","", new{@class="form-control"})
    </div>
    <div class="form-group">
        @Html.Label("lblestadoEquipo","Estado de Equipo")
        @Html.TextBox("txaestadoEquipo","", new{@class="form-control"})
    </div>
    <div class="form-group">
        @Html.Label("lblestado","Estado")
